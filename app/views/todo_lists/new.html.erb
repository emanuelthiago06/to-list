<div class = "new_todo_wrapper">

<h1>New todo list</h1>

<% todo_list = @todo_list %>
<%= form_with(model: todo_list) do |form| %>
  <% if todo_list.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(todo_list.errors.count, "error") %> prohibited this todo_list from being saved:</h2>
      <ul>
        <% todo_list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :titulo, style: "display: block", id: "label" %>
    <%= form.text_field :title, id: "text_field" %>
  </div>

  <div>
    <%= form.label :descrição, style: "display: block", id: "label" %>
    <%= form.text_area :description, id: "text_field" %>
  </div>

  <div>
    <%= form.submit "Criar nova lista", id: "btn", class: "btn_edit", style: "margin-left: 0px" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to todo lists", todo_lists_path %>
</div>
