<%  if todo_item.is_completed %>
    <div class = "todo_item_wrapper">
        <div class = "todo_item_content">
            <strike><%= todo_item.content %></strike>
        </div>
        <div class = "todo_item_options">
            <%= button_to "Completar", complete_todo_list_todo_item_path(@todo_list_partial, todo_item.id), method: :patch %>
            <%= button_to "Destuir item", todo_list_todo_item_path(@todo_list_partial, todo_item.id), method: :delete %>
        </div>
    </div>
<% else%>
    <div class = "todo_item_wrapper">
        <div class = "todo_item_content">
            <%= todo_item.content %>
        </div>
        <div class = "todo_item_options">
            <%= button_to "Completar", complete_todo_list_todo_item_path(@todo_list_partial, todo_item.id), method: :patch %>
            <%= button_to "Destuir item", todo_list_todo_item_path(@todo_list_partial, todo_item.id), method: :delete %>
        </div>
    </div>
<% end%>
